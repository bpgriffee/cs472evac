<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Heatmaps</title>

    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=visualization"></script>
    <script>
var map, pointarray, heatmap;
var markercount=0;
 
var pointData = []; 
 
function initialize() {
  // the map's options
  var mapOptions = {
    zoom: 13,
    center: new google.maps.LatLng(39.643217, -79.960964),
  };
 
  // the map and where to place it
  map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
 
  var pointArray = new google.maps.MVCArray(pointData);
 
  // what data for the heatmap and how to display it
  heatmap = new google.maps.visualization.HeatmapLayer({
    data: pointArray,
    radius: 35
  });
/* 
  map.addListener('click',function(e){
    dropPoint(e.latLng.lat, e.latLng.lng);
  });*/
}
// as soon as the document is ready the map is initialized
google.maps.event.addDomListener(window, 'load', initialize);

// -------------------------------------------------------------
// Everything below here is interactive point dropper functions
// -------------------------------------------------------------
function submitPoint(form){
   dropPoint(form.newLat.value, form.newLong.value)
}
function dropPoint(lat, lng) { 
        var randomPop = Math.floor((Math.random() *100 +1))
        var newLatLng = new google.maps.LatLng(lat, lng);
        pointData.push({location: newLatLng, weight: randomPop/10});
        var marker = new google.maps.Marker({
            position:newLatLng,
            map: map,
            animation: google.maps.Animation.DROP,
        });

        var infowindow = new google.maps.InfoWindow({
            content: '<h3>Marker #'+markercount.toString()+'</h3>'+
                     '<p>Population: '+randomPop.toString()+'\b'+
                     '<p>Lat: '+lat.toString()+'\b'+
                     '<p>Long: '+lng.toString()+'</p>'
        });

        marker.addListener('click',function(){
            infowindow.open(map,marker);
        });
        markercount++;
        map.panTo(newLatLng);
        marker.setMap(map);
        heatmap.setMap(map);
    }

    </script>
  </head>
 
  <body>
    <h1>Google Heat Map</h1>
    <div id="map-canvas" style="width:100%;height:400px;"></div>
    <h3>Add Points</h3>
    <form name="pointDropper">
        Lat <input type="number" name="newLat"/>
        Long <input type="number" name="newLong"/>
        <input type="button" value="Add Point"/>
        <input type="reset" value="Cancel"/>
    </form>
    <div id="sampleDropSpots">
        <p>Sample points:</p>
        <p>University Town Center: <input type="button" onclick="dropPoint(39.6446268, -80.0003815)" value="Drop"/></p>
        <p>Heath Sciences Campus: <input type="button" onclick="dropPoint(39.6562542, -79.9594877)" value="Drop"/></p>
        <p>Morgantown Airport: <input type="button" onclick="dropPoint(39.6441022, -79.9200768)" value="Drop"/></p>  
    </div> 
  </body>
</html>
